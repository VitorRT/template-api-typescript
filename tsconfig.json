{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "es2017",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./src",                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                     
    "skipLibCheck": true,
    "noEmitOnError": false              
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "**/*/test",
    "./build"
  ]
}
